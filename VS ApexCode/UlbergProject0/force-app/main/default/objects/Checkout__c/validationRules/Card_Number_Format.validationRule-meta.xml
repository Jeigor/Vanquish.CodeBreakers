<?xml version="1.0" encoding="UTF-8" ?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Card_Number_Format</fullName>
    <active>true</active>
    <description
  >Card number must be in correct format: XXXX-XXXX-XXXX-XXXX.</description>
    <errorConditionFormula>NOT(
 OR(
  LEN( Card_Number__c ) = 0 ,
  REGEX( Card_Number__c , &quot;[0-9]{4}-[0-9]{4}-[0-9]{4}-[0-9]{4}&quot;)  
 )
)</errorConditionFormula>
    <errorDisplayField>Card_Number__c</errorDisplayField>
    <errorMessage
  >Card number must be in correct format: XXXX-XXXX-XXXX-XXXX.</errorMessage>
</ValidationRule>
