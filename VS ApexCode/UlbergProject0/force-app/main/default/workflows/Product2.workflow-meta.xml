<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>EmailReminderForTask</fullName>
        <description>EmailReminderForTask</description>
        <protected>false</protected>
        <recipients>
            <recipient>support@specialist.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/SalesNewCustomerEmail</template>
    </alerts>
    <alerts>
        <fullName>Send_email_when_Approved</fullName>
        <ccEmails>wsempathy@yahoo.com</ccEmails>
        <description>Send email when Approved</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/MarketingProductInquiryResponse</template>
    </alerts>
    <rules>
        <fullName>Send Message to admin</fullName>
        <actions>
            <name>EmailReminderForTask</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>WatchItem</name>
            <type>Task</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Product2.Asking_Price__c</field>
            <operation>greaterThan</operation>
            <value>50000</value>
        </criteriaItems>
        <description>Send messsage to admin if asking price is above 50,000$</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <tasks>
        <fullName>WatchItem</fullName>
        <assignedTo>support@specialist.com</assignedTo>
        <assignedToType>user</assignedToType>
        <description>Check to make sure posting is real 
Check seller to verify they are trustworthy enough to sell such a big item</description>
        <dueDateOffset>2</dueDateOffset>
        <notifyAssignee>false</notifyAssignee>
        <offsetFromField>Product2.Date_Posted__c</offsetFromField>
        <priority>High</priority>
        <protected>false</protected>
        <status>Not Started</status>
        <subject>WatchItem</subject>
    </tasks>
</Workflow>
