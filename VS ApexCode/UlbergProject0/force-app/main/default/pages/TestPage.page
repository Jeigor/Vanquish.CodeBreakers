  <script>
    j$ = jQuery.noConflict();
    j$(document).ready(function () {
      // first row assigned activeRow class
      j$('[id$="pdctTable"]').find("tr.first").addClass(".row");

      j$('[id$="pdctTable"] tr').click(function () {
        // remove activeRow class from previous row
        j$(".row").removeClass("row");
        // assign activeRow class to recently clicked row
        j$(this).addClass("activeRow");
      });
    });
  </script>
